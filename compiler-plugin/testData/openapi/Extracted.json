    "paths": {
        "/api/users": {
            "post": {
                "summary": "Save a new user.\n",
                "requestBody": {
                    "description": "the user to save.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "[User1]"
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Get a list of users.\n",
                "responses": {
                    "200": {
                        "description": "A list of users.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "[List<User>]"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/{id}": {
            "delete": {
                "summary": "Delete a user.\n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "The ID of the user",
                        "required": true
                    }
                ]
            },
            "get": {
                "summary": "Get a single user\n",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "The ID of the user",
                        "required": true
                    }
                ],
                "responses": {
                    "404": {
                        "description": "The user was not found"
                    }
                }
            }
        }
    }
